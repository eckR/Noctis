<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="at.rosinen.Noctis.eventoverview.EventpagerFragment">

    <TextView android:layout_width="match_parent"
              android:layout_height="62dp"
              android:background="@color/g1"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="3dp"
              android:layout_marginLeft="70dp"
              android:text="Events"
              android:textSize="18dp"
              android:textColor="@color/g3"
              android:gravity="center"/>

        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/pagerHeader"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:layout_width="300dp"
            android:layout_height="48dip"
            android:textColor="@color/w"
            android:textSize="20dp"

            app:pstsIndicatorHeight="5dp"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView" android:layout_toEndOf="@+id/textView"
            android:fillViewport="false"/>

    <TextView android:layout_width="48dp" android:layout_height="48dp"
              android:layout_margin="7dp"
              android:text="999"
              android:textSize="22dp"
              android:background="@color/g2"
              android:textColor="@color/w"

              android:gravity="center" android:id="@+id/textView"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:layout_marginTop="62dp">



        </android.support.v4.view.ViewPager>
</RelativeLayout>
